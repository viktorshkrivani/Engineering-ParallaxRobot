' {$STAMP BS2}
' {$PBASIC 2.5}

counter          VAR    Word
pulseWidth       VAR    Word
pulseWidthComp   VAR    Word

FREQOUT 4, 2000, 3000

DO
  DEBUG "Enter pulse width: "

  DEBUGIN DEC pulseWidth

  pulseWidthComp = 1500 - pulseWidth

  FOR counter = 1 TO 244
      PULSOUT 12, pulseWidth
      PULSOUT 13, pulseWidthComp
      PAUSE 20
  Next
LOop